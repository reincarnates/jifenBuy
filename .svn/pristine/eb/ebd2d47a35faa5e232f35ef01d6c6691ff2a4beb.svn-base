@charset "utf-8";

.purchase-container{
  width: 100%;
  padding: 19px 18px;
  box-sizing: border-box;
}

.purchase-item{
  width: 300px;
  height: 440px;
  border: 1px solid #eee;
  margin-right: 21px;
  margin-bottom: 19px;
  float: left;
  position: relative;
}

.purchase-item:nth-child(3n+3){
  margin-right: 0;
}

.purchase-item-img{
  width: 100%;
  height: 280px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.purchase-item-img img{
  width: 90%;
}

.purchase-item-suggest{
  width: 100%;
  line-height: 26px;
  font-size: 14px;
  padding: 0 13px;
  box-sizing: border-box;
  /* text-align: center; */
}

.purchase-item-suggest a{
  color: #333;
}

.purchase-item-suggest a:hover{
  color: #ffb22c;
  text-decoration: underline;
}

.purchase-item-price-wrapper{
  width: 100%;
  line-height: 40px;
  padding-left: 13px;
}

.purchase-item-price{
  color: #ff5628;
  font-size: 18px;
}

.price-reduction a{
  color: #0079b6;
  font-size: 14px;
}

.purchase-item-shop-number{
  color: #999;
  font-size: 14px;
  padding-left: 15px;
}

.purchase-item-operation{
  width: 100%;
  height: 37px;
  border-top: 1px solid #eee;
  background-color: #f7f7f7;
  margin-top: 8px;
  line-height: 37px;
  color: #333;
  font-size: 14px;
  text-align: center;
}

.purchase-item-operation-left{
  width: 149px;
  float: left;
  border-right: 1px solid #eee;
  cursor: pointer;
}

.purchase-item-operation-left span{
  /* margin-left: 10px; */
}

.purchase-item-operation-left img{
  vertical-align: middle;
}

.purchase-item-operation-right{
  width: 149px;
  float: left;
  cursor: pointer;
}

.purchase-item-operation-right span{
  /* margin-left: 10px; */
}

.purchase-item-operation-right img{
  vertical-align: middle;
}

.delete-purchase-mask-wrapper{
  position: absolute;
  top: 0;
  width: 300px;
  height: 440px;
  background-color: rgba(0, 0, 0, .7);
  display: none;
}

.delete-purchase-mask-word{
  text-align: center;
  line-height: 32px;
  color: #fff;
  font-size: 16px;
  margin-top: 180px;
}

.delete-purchase-mask-btn{
  width: 116px;
  height: 20px;
  font-size: 14px;
  text-align: center;
  margin: 0 auto;
  margin-top: 11px;
}

.delete-purchase-mask-btn-left{
  width: 48px;
  height: 20px;
  background-color: #ffb030;
  text-align: center;
  line-height: 20px;
  border-radius: 1px;
  margin-right: 20px;
  color: #fff;
  float: left;
  cursor: pointer;
}

.delete-purchase-mask-btn-right{
  width: 48px;
  height: 20px;
  background-color: #fff;
  text-align: center;
  line-height: 20px;
  border-radius: 1px;
  color: #333;
  float: left;
  cursor: pointer;
}