@charset "utf-8";

.payment_cashier_head_wrapper{
  width: 100%;
  height: 98px;
  border-bottom: 1px solid #ffb030;
}

.payment_cashier_head{
  width: 1200px;
  margin: 0 auto;
}

.payment_cashier_head_left{
  width: 345px;
  height: 98px;
  display: flex;
  align-items: center;
  float: left;
}

.payment_cashier_head_left span{
  font-size: 18px;
  color: #333;
  margin-top: 14px;
  margin-left: 5px;
}

.payment_cashier_head_right{
  width: 239px;
  height: 98px;
  display: flex;
  align-items: center;
  float: right;
}

.cashier_user{
  font-size: 14px;
  color: #333;
}

.cashier_ver{
  font-size: 14px;
  margin: 0 15px;
}

.cashier_order a{
  font-size: 14px;
  color: #333;
}

.cashier_order a:hover{
  color: #e98030;
}

.voucher-wrapper{
  width: 1200px;
  margin: 0 auto;
}

.balance-wrapper {
  width: 100%;
  margin-bottom: 30px;
  box-sizing: border-box;
  box-shadow: -5px 0 10px #eaeaea;
}

.balance-content {
  height: 532px;
  margin-top: 30px;
  background-color: #fff;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
}

.balance-content-head{
  width: 100%;
  line-height: 41px;
  border-bottom: 1px dashed #ddd;
  font-size: 16px;
  color: #333;
  padding-left: 22px;
  box-sizing: border-box;
}

.form {
  /* padding: 20px 50px 0 80px; */
  padding: 50px 20px;
  box-sizing: border-box;
}

.recharge-price{
  color: #666;
  font-size: 16px;
  margin-bottom: 18px;
}

.item {
  margin-bottom: 20px;
  color: #333;
  font-size: 14px;
}

.label {
  float: left;
  width: 75px;
  font-size: 14px;
  color: #666666;
}

.label2 {
  float: left;
  width: 75px;
  line-height: 33px;
  font-size: 14px;
  color: #666666;
}

.username {
  font-size: 14px;
  width: 770px;
  float: left;
  position: relative;
}

.text {
  font-weight: bold;
  font-size: 16px;
  color: #cc0000;
  text-align: center;
  width: 134px;
  height: 33px;
  padding: 4px;
  margin-right: 5px;
  border: 1px solid #ccc;
}

.text-label {
  line-height: 25px;
  margin-right: 5px;
  font-size: 14px;
}

.msg-error {
  font-size: 12px;
  color: #e4393c;
  float: left;
  line-height: 25px;
  display: none;
  position: absolute;
}

.balance-introduce {
  /* margin-left: 80px;
  margin-right: 80px; */
  padding: 15px 30px;
  margin-bottom: 20px;
  /* margin-top: 30px; */
  border-width: 2px;
  /* border: 1px solid #ffb030; */
  background: #fffbf4;
  border-bottom-left-radius: 3px;
  border-bottom-right-radius: 3px;
}

.balance-introduce-head {
  margin-bottom: 13px;
  font-size: 20px;
  color: #333;
}

.balance-introduce-list {
  font-size: 12px;
  color: #666;
}

.btn-next {
  display: inline-block;
  *zoom: 1;
  width: 150px;
  height: 45px;
  line-height: 45px;
  text-align: center;
  overflow: hidden;
  background-color: #ffb030;
  color: #fff !important;
  margin-top: 30px;
  margin-bottom: 70px;
}

.balance-introduce-list-item{
  /* margin-top: 28px; */
  color: #666;
  font-size: 14px;
  line-height: 21px;
}

.payment_success_wrapper{
  width: 1200px;
  height: 570px;
  background-color: #fff;
  box-shadow: -5px 5px 15px 5px #eaeaea;
  border-radius: 4px;
  margin: 0 auto;
  margin-top: 22px;
  margin-bottom: 30px;
}

.payment_success_head{
  width: 100%;
  height: 204px;
  border-bottom: 1px solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.payment_success_head_word{
  line-height: 29px;
  font-size: 16px;
  color: #333;
  margin-top: 6px;
}

.payment_success_head_word:last-child{
  margin-top: 0;
}

.payment_success_content{
  width: 100%;
  padding: 32px 0 32px 415px;
  box-sizing: border-box;
}

.payment_success_content_word{
  line-height: 28px;
  font-size: 14px;
  color: #333;
  padding-left: 10px;
  box-sizing: border-box;
}

.payment_success_content_word span{
  color: #ff5628;
}

.payment_success_content_btn{
  margin-left: 26px;
}

.check_order_btn{
  width: 144px;
  height: 43px;
  background-color: #fff;
  border: 1px solid #ffc568;
  border-radius: 1px;
  text-align: center;
  line-height: 41px;
  color: #ffc568;
  font-size: 16px;
  margin-top: 40px;
  margin-right: 24px;
  cursor: pointer;
  float: left;
}

.look_around_btn{
  width: 144px;
  height: 43px;
  background-color: #fff;
  border: 1px solid #999;
  border-radius: 1px;
  text-align: center;
  line-height: 41px;
  color: #333;
  font-size: 16px;
  margin-top: 40px;
  cursor: pointer;
  float: left;
}

.select-recharge-type{
  color: #666;
  font-size: 16px;
  margin-top: 30px;
}

.recharge-type-wrapper{
  width: 100%;
  margin-top: 20px;
}

.recharge-type{
  width: 230px;
  height: 62px;
  border: 1px solid #ddd;
  border-radius: 4px;
  text-align: center;
  cursor: pointer;
  position: relative;
  float: left;
}

.recharge_type_select{
  position: absolute;
  right: -1px;
  bottom: -1px;
  display: none;
}

.recharge-type img{
  margin-top: 15px;
}

.recharge-type-wx{
  margin-left: 19px;
}

.recharge-type-active{
  border-color: #ffb030;
  background-color: #fff8e8;
}

.recharge-type-active>.recharge_type_select{
  display: block;
}

.enter-recharge-btn{
  width: 124px;
  height: 38px;
  background-color: #ff5826;
  text-align: center;
  line-height: 38px;
  color: #fff;
  font-size: 18px;
  cursor: pointer;
  margin-top: 30px;
  border-radius: 1px;
}

.payment_success_head_word2{
  color: #ff5628;
  font-size: 16px;
  line-height: 36px;
}

.recharge_content_word{
  width: 302px;
  /* text-align: center; */
  line-height: 28px;
  font-size: 14px;
  color: #333;
  padding-left: 93px;
  box-sizing: border-box;
}