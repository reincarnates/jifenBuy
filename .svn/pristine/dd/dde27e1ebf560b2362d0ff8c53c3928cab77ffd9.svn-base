@charset "utf-8";

.evaluate-wrapper{
  width: 1200px;
  margin: 0 auto;
}

.evaluate-head{
  width: 100%;
  line-height: 34px;
}

.evaluate-head a{
  font-size: 14px;
  color: #999;
}

.shipped-head-color {
  color: #333 !important;
}

.evaluate-tips-wrapper{
  width: 100%;
  line-height: 45px;
  border: 1px solid #dcdcdc;
  padding-left: 16px;
  box-sizing: border-box;
  color: #999;
  font-size: 14px;
}

.evaluate-tips{
  color: #333;
  font-size: 14px;
  margin-left: 19px;
}

.evaluate-goods-wrapper{
  width: 100%;
  border: 1px solid #dcdcdc;
  margin-top: 20px;
}

.evaluate-goods-head{
  width: 100%;
  height: 39px;
  border-bottom: 1px solid #dcdcdc;
  padding: 0 72px 0 17px;
  box-sizing: border-box;
  line-height: 39px;
  color: #999;
  font-size: 14px;
}

.evaluate-word{
  float: right;
}

.evaluate-goods-content{
  width: 100%;
}

.evaluate-goods-content-item{
  width: 100%;
  height: 122px;
  padding-right: 65px;
  box-sizing: border-box;
  position: relative;
}

.evaluate-goods-content-item-left{
  width: 416px;
  float: left;
}

.evaluate-goods-content-item-left-img{
  width: 107px;
  height: 121px;
  padding: 24px 15px;
  float: left;
}

.evaluate-goods-content-item-left-introduce{
  float: left;
  width: 305px;
  line-height: 22px;
  color: #333;
  font-size: 14px;
  margin-top: 30px;
}

.evaluate-introduce{
  font-size: 12px;
  color: #666;
  line-height: 40px;
}

.evaluate-goods-content-item-right{
  float: right;
  color: #0090ff;
  font-size: 14px;
  line-height: 122px;
}

/*向上*/
.triangle{
  position: absolute;
  bottom: -1px;
  right: 70px;
}

.triangle_border_up2{
  width:0;
  height:0;
  border-width:0 12px 12px;
  border-style:solid;
  border-color:transparent transparent #eee;/*透明 透明  灰*/
  position:relative;
}

.triangle_border_up2 span{
  display:block;
  width:0;
  height:0;
  border-width:0 10px 10px;
  border-style:solid;
  border-color:transparent transparent #f7f7f7;/*透明 透明  黄*/
  position:absolute;
  top:3px;
  left:-10px;
}

.evaluate-container{
  width: 100%;
  height: 378px;
  background-color: #f7f7f7;
  border-style: solid;
  border-color: #ddd;
  border-width: 0 1px 1px 1px;
  padding: 34px 28px;
  box-sizing: border-box;
}

.goods-evaluate-wrapper{
  color: #333;
  font-size: 14px;
}

.goods-evaluate-left-color{
  color: #ff5826 !important;
}

.goods-evaluate-left{
  float: left;
}

.goods-evaluate-right{
  float: left;
}