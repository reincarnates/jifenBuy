@charset "utf-8";

.tracks-wrapper{
  width: 980px;
  height: 1137px;
  background-color: #fff;
  margin-left: 20px;
  float: left;
}

.account-head-wrapper {
  width: 100%;
  height: 30px;
  line-height: 30px;
  border-bottom: 1px dashed #e5e5e5;
  padding-left: 20px;
  box-sizing: border-box;
  font-size: 12px;
  color: #666;
}

.account-head-wrapper a:last-child {
  color: #333;
}

.size-seat{
  width: 100%;
  height: 50px;
  background-color: #e9e9e9;
}

.tracks-container{
  width: 100%;
  padding: 0 20px;
  box-sizing: border-box;
}

.tracks-item{
  width: 220px;
  height: 282px;
  margin-right: 20px;
  margin-top: 20px;
  border: 1px solid #eee;
  float: left;
}

.tracks-item:hover{
  border-color: #ffb030;
}

.tracks-item:nth-child(4n+4){
  margin-right: 0;
}

.tracks-item-img{
  width: 218px;
  padding: 10px;
  box-sizing: border-box;
  position: relative;
}

.tracks-item-img img{
  width: 100%;
}

.tracks-item-close{
  width: 27px;
  height: 27px;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 10px;
  top: 10px;
  cursor: pointer;
}

.tracks-item-close img{
  width: 15px;
  height: 15px;
}

.tracks-item-word{
  line-height: 38px;
  text-align: center;
  color: #333;
  font-size: 18px;
}

.tracks-word{
  width: 100%;
  line-height: 248px;
  color: #666;
  font-size: 14px;
  text-align: center;
}

.trancks-not{
  width: 100%;
  height: 248px;
  background: url(../../images/static/trancks_not_img.png) no-repeat center center;
  margin-top: 50px;
  display: none;
}